var i = 99;
var a = i;
function song(){
while(i >= 1)
    {
        console.log(i + " bottles of bear on the wall, " + i +"bottles of beer. " + "Take 1 down, pass it around, " + i + "bottles of beer on the wall.");
        i--;    
    }
}
song();
console.log("No more bottles of beer on the wall, no more bottles of beer, Go to the store and buy some more, " + a +" bottles of beer on the wall.");
